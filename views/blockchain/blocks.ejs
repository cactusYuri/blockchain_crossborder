<%- include('../partials/header') %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center">
    <h1>区块浏览器</h1>
    <a href="/blockchain" class="btn btn-primary">返回区块链概览</a>
  </div>
  
  <div class="card mt-4">
    <div class="card-header bg-primary text-white">
      区块列表
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>#</th>
              <th>哈希</th>
              <th>交易数</th>
              <th>时间戳</th>
              <th>工作量证明</th>
              <th>操作</th>
            </tr>
          </thead>
          <tbody>
            <% blocks.forEach((block, index) => { %>
              <tr>
                <td><%= index %></td>
                <td><code class="text-break" style="max-width: 150px; display: inline-block; overflow: hidden; text-overflow: ellipsis;"><%= block.hash %></code></td>
                <td><span class="badge bg-info"><%= block.transactions.length %></span></td>
                <td><%= new Date(block.timestamp).toLocaleString() %></td>
                <td><%= block.nonce %></td>
                <td>
                  <a href="/blockchain/blocks/<%= index %>" class="btn btn-sm btn-primary">查看详情</a>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %> 